<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sketch1"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/homePage"
        android:layout_width="405dp"
        android:layout_height="49dp"
        android:fontFamily="@font/raleway_extralight"
        android:gravity="center"
        android:text="@string/home_page"
        android:textColor="#D0DAE3"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/homeIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/artists"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="396dp"
        android:fontFamily="@font/raleway"
        android:text="Available artists"
        android:visibility="invisible"
        android:textColor="#091832"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/song"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:fontFamily="@font/raleway"
        android:text="Specific song"
        android:textColor="#091832"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artists"
        app:layout_constraintVertical_bias="0.099" />

    <Button
        android:id="@+id/downloads"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:fontFamily="@font/raleway"
        android:text="Downloads"
        android:textColor="#091832"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song"
        app:layout_constraintVertical_bias="0.128" />

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="108dp"
        android:layout_height="93dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/artists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>